  <article class="pt3 ">
    <ul class="list pl0 ">
      {% for post in postslist | reverse %}
        {% if post.data.title != "draft" %}
          <li class="pb2 ">
            
            <a href="{{ post.url | url }}" 
              class="link">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>

              <time class="f6 gray pt2 pr3 ">{{ post.data.date | readableDate() }}</time>
          </li>
        {% endif %}
      {% endfor %}
    </ul>


